<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose the vechile:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Train_schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Taxi_Destination_place"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:onClick="startTrainSchedule"
        android:text="Train schedule"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="invisible" />

    <RadioButton
        android:id="@+id/train_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:text="Trains"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/bus_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Buses"
        android:layout_below="@+id/Train_Destination_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Train_Current_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Current place"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_alignTop="@+id/train_radio_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/Train_Destination_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Destination place"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_below="@+id/Train_Current_place"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Train_Current_place"
        android:layout_alignStart="@+id/Train_Current_place" />

    <EditText
        android:id="@+id/Bus_Current_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Current place"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_below="@+id/Train_Destination_place"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Train_Destination_place"
        android:layout_alignStart="@+id/Train_Destination_place" />

    <EditText
        android:id="@+id/Bus_Destination_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Destination place"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_below="@+id/Bus_Current_place"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Bus_Current_place"
        android:layout_alignStart="@+id/Bus_Current_place" />

    <Button
        android:id="@+id/Bus_schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Taxi_schedule_button"
        android:layout_alignBottom="@+id/Taxi_schedule_button"
        android:layout_alignEnd="@+id/Train_schedule_button"
        android:layout_alignLeft="@+id/Taxi_schedule_button"
        android:layout_alignRight="@+id/Train_schedule_button"
        android:layout_alignStart="@+id/Taxi_schedule_button"
        android:onClick="startBusSchedule"
        android:text="Bus schedule"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="invisible" />

    <RadioButton
        android:id="@+id/Taxi_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Taxis"
        android:layout_below="@+id/Bus_Destination_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Taxi_Current_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Bus_Destination_place"
        android:layout_alignRight="@+id/Bus_Destination_place"
        android:layout_below="@+id/Bus_Destination_place"
        android:hint="Current place"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_alignLeft="@+id/Bus_Destination_place"
        android:layout_alignStart="@+id/Bus_Destination_place" />

    <EditText
        android:id="@+id/Taxi_Destination_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Bus_Destination_place"
        android:layout_alignLeft="@+id/Taxi_Current_place"
        android:layout_alignRight="@+id/Bus_Destination_place"
        android:layout_alignStart="@+id/Taxi_Current_place"
        android:layout_below="@+id/Taxi_Current_place"
        android:hint="Destination place"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <Button
        android:id="@+id/Taxi_schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Train_schedule_button"
        android:layout_alignEnd="@+id/Train_schedule_button"
        android:layout_alignLeft="@+id/Train_schedule_button"
        android:layout_alignRight="@+id/Train_schedule_button"
        android:layout_alignStart="@+id/Train_schedule_button"
        android:layout_alignTop="@+id/Train_schedule_button"
        android:onClick="startTaxiSchedule"
        android:text="Taxi schedule"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="invisible" />

</RelativeLayout>

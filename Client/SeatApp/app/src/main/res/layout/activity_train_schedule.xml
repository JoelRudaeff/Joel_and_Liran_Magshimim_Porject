<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.seatapp.TrainScheduleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="רכבות"
        android:id="@+id/Train_schedule_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current"
        android:id="@+id/Train_Current"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/Train_schedule_title"
        android:layout_alignRight="@+id/Train_schedule_title"
        android:layout_alignEnd="@+id/Train_schedule_title" />

    <TextView
        android:id="@+id/Train_Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Train_Current"
        android:layout_alignStart="@+id/Train_Current"
        android:layout_below="@+id/Train_Current"
        android:layout_marginTop="42dp"
        android:text="Destination"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="מוצא:"
        android:id="@+id/from"
        android:layout_above="@+id/Train_Destination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="יעד:"
        android:id="@+id/to"
        android:layout_alignTop="@+id/Train_Destination"
        android:layout_alignRight="@+id/from"
        android:layout_alignEnd="@+id/from" />

</RelativeLayout>
